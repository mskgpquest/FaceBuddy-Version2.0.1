<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="25dp">

    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/image_notification"
            android:layout_width="280dp"
            android:layout_height="220dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/profile_image"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:id="@+id/name_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Username"
            android:layout_below="@+id/image_notification"
            android:textAlignment="center"/>
        <Button
            android:textSize="13dp"
            android:textColor="@android:color/white"
            android:id="@+id/request_accept_btn"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="79dp"
            android:text="Accept Friend Request"
            android:layout_below="@+id/name_notification"
            android:textAllCaps="false"/>
        <Button
            android:textSize="13dp"
            android:textColor="@android:color/white"
            android:id="@+id/request_decline_btn"
            android:background="@android:color/holo_blue_light"
            android:padding="5dp" android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="79dp"
            android:layout_marginBottom="12dp"
            android:text="Decline Friend Request"
            android:layout_below="@+id/request_accept_btn"
            android:textAllCaps="false"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
